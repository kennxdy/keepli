<div class="pt-1 mx-2">
  <div class="mb-4">
    <div class="my-2">
      <h6>
        <i class="bi bi-justify-left align-bottom"></i>
        <span class="px-1">Description</span>
      </h6>
    </div>
    <p>
      <%= bookmark.description %>
    </p>
  </div>

  <div class="mb-4">
    <div>
      <h6>
        <i class="bi bi-link-45deg align-bottom"></i>
        <span class="px-1">Link</span>
      </h6>
    </div>
    <p>
      <a href="<%= bookmark.link %>" target="_blank">
        <%= bookmark.link %>
      </a>
    </p>
  </div>

  <div>
    <div>
      <h6>
        <i class="bi bi-tag align-bottom"></i>
        <span class="px-1">Collection</span>
      </h6>
    </div>
    <p>
      <%= bookmark.collection.name %>
    </p>
  </div>

  <div>
    <div>
      <h6>
        <i class="bi bi-calendar align-bottom"></i>
        <span class="px-1">Created</span>
      </h6>
    </div>
    <p>
      <%= bookmark.created_at.strftime("%Y-%m-%d") %>
    </p>
  </div>
</div>
