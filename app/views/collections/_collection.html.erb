<div class="pt-1 mx-2">
  <div class="my-2">
    <div>
      <h6>
        <i class="bi bi-bookmarks align-bottom"></i>
        <span class="px-1">Bookmarks</span>
      </h6>
    </div>
    <p>
      <%= collection.bookmarks.count %>
    </p>
  </div>

  <div>
    <div>
      <h6>
        <i class="bi bi-calendar align-bottom"></i>
        <span class="px-1">Created</span>
      </h6>
    </div>
    <p>
      <%= collection.created_at.strftime("%Y-%m-%d") %>
    </p>
  </div>
</div>
